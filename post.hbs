{{!< default}}
<article class="{{post_class}}">
    {{#post}}
    <header>
        <h2 class="post-title">{{{title}}}</h1>
            <div class="post-meta">
                <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
            </div>
    </header>
    <section class="post-content">
        {{content}}
    </section>
    <section class="post-tags">
        {{#if tags}}<div class="post-meta tags"><i class="fa fa-fw fa-tags"></i> {{tags}}</div>{{/if}}
    </section>
    {{/post}}

    <hr />

    {{> disqus}}
</article>